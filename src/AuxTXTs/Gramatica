S -> BlocoVar BlocoPrograma

BlocoVar -> Var BlocoVar
        |   ли

Var -> int id
    |   int id '=' num
    |   ли

BlocoPrograma -> Programa


Programa -> Ler
        |   Escrever
        |   Atrib
        |   Fluxo
        |   Ciclo


Escrever -> print Exp

Exp -> Exp '+' Termo
     | Exp '-' Termo
     | Termo

Termo -> Termo '*' Factor
       |  Termo '/' Factor
       | Factor

Factor -> '(' Exp ')'
        | num
        | id